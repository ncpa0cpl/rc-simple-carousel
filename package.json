{
  "name": "rc-simple-carousel",
  "version": "1.0.0",
  "main": "./dist/index.js",
  "description": "A simple carousel component for React",
  "keywords": [
    "react",
    "carousel",
    "rc",
    "component",
    "animated",
    "animation"
  ],
  "scripts": {
    "build": "snowpack build && yarn generate-declarations",
    "generate-declarations": "tsc --declaration --emitDeclarationOnly --declarationDir ./dist",
    "postinstall": "exitzero patch-package",
    "test:tsc": "tsc --noEmit",
    "test:lint": "eslint src/**/*.{ts,tsx}",
    "test:prettier": "prettier --check 'src/**/*.{ts,tsx}'",
    "fix:lint": "eslint --fix 'src/**/*.{ts,tsx}'",
    "fix:prettier": "prettier --write 'src/**/*.{ts,tsx}'"
  },
  "devDependencies": {
    "@snowpack/plugin-sass": "^1.4.0",
    "@types/react": ">16.8.0",
    "@types/react-dom": ">16.8.0",
    "@typescript-eslint/eslint-plugin": "^5.48.2",
    "@typescript-eslint/parser": "^5.48.2",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "exitzero": "^1.0.1",
    "git-hook-tasks": "ncpa0cpl/git-hook-tasks",
    "husky": "^8.0.3",
    "patch-package": "^6.5.1",
    "prettier": "^2.8.3",
    "prettier-plugin-jsdoc": "^0.4.2",
    "react": ">16.8.0",
    "react-dom": ">16.8.0",
    "react-spring": ">9.0.0",
    "snowpack": "^3.8.8",
    "typescript": "^4.9.4"
  },
  "peerDependencies": {
    "react": ">16.8.0",
    "react-dom": ">16.8.0",
    "react-spring": ">9.0.0"
  },
  "author": {
    "email": "szymonb21@gmail.com",
    "name": "Szymon Bretner",
    "url": "https://github.com/ncpa0cpl"
  },
  "repository": {
    "url": "https://github.com/ncpa0cpl/rc-simple-carousel",
    "type": "git",
    "branch": "master"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ncpa0cpl/rc-simple-carousel/issues"
  },
  "packageManager": "yarn@3.3.1"
}
