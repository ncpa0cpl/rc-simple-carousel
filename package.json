{
  "name": "rc-simple-carousel",
  "version": "1.0.0",
  "main": "./dist/index.js",
  "version": "1.0.0",
  "description": "A simple carousel component for React",
  "keywords": [
    "react",
    "carousel",
    "rc",
    "component",
    "animated",
    "animation"
  ],
  "scripts": {
    "build": "snowpack build && yarn generate-declarations",
    "generate-declarations": "tsc --declaration --emitDeclarationOnly --declarationDir ./dist",
    "postinstall": "patch-package",
    "test:tsc": "tsc --noEmit",
    "test:lint": "eslint src/**/*.{ts,tsx}",
    "test:prettier": "prettier --check 'src/**/*.{ts,tsx}'",
    "fix:lint": "eslint --fix 'src/**/*.{ts,tsx}'",
    "fix:prettier": "prettier --write 'src/**/*.{ts,tsx}'"
  },
  "devDependencies": {
    "@snowpack/plugin-sass": "^1.4.0",
    "@types/react": ">16.8.0",
    "@types/react-dom": ">16.8.0",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "eslint": "^8.18.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "patch-package": "^6.4.7",
    "prettier": "^2.7.1",
    "prettier-plugin-jsdoc": "^0.3.38",
    "react": ">16.8.0",
    "react-dom": ">16.8.0",
    "react-spring": ">9.0.0",
    "snowpack": "^3.3.7",
    "typescript": "^4.7.3"
  },
  "peerDependencies": {
    "react": ">16.8.0",
    "react-dom": ">16.8.0",
    "react-spring": ">9.0.0"
  },
  "author": {
    "email": "szymonb21@gmail.com",
    "name": "Szymon Bretner",
    "url": "https://github.com/ncpa0cpl"
  },
  "repository": {
    "url": "https://github.com/ncpa0cpl/rc-simple-carousel",
    "type": "git",
    "branch": "master"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ncpa0cpl/rc-simple-carousel/issues"
  },
  "dependencies": {
    "git-hook-tasks": "ncpa0cpl/git-hook-tasks",
    "husky": "^8.0.1"
  }
}
